@model ShopManagementCore.Models.TblRagistration

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Welcome Back!</h2>

        <form asp-action="Login" method="post" class="login-form">
            <input asp-for="Email" class="input-field" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="Password" class="input-field" placeholder="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="login-button">Login</button>
        </form>

        <div class="signup-text">
            <span>Don't have an account? </span>
            <a asp-controller="Home" asp-action="Register">Sign up</a>
        </div>
    </div>
</div>
